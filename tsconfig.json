{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/",
    "jsx": "react",
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "_locales",
    "src",
    "mellowtel",
    "custom-types.d.ts",
    "webpack.config.ts",
    "jest.setup.ts",
    "package.json",
  ],
  "exclude": [
    "node_modules"
  ]
}