{
  "name": "xtranslate",
  "version": "4.0.0",
  "scripts": {
    "compile": "rm -rf ./dist && npm run pdfjs-build && webpack",
    "dev": "npm run compile -- --env mode=development --watch",
    "build": "npm run compile -- --env mode=production --progress",
    "pdfjs-build": "cd node_modules/pdf.js && npm install && npx gulp generic && find ./build -name '*.map' -delete",
    "update-packages": "npx npm-check-updates -u",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "verbose": true,
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "chrome",
    "extension",
    "translate",
    "languages",
    "learning",
    "studying",
    "education",
    "productivity",
    "in-place-text-translator",
    "ai-text-translator",
    "ai-text-to-speech"
  ],
  "author": "ixrock",
  "repository": "https://github.com/ixrock/XTranslate.git",
  "license": "MIT",
  "dependencies": {
    "@fluent/bundle": "^0.18.0",
    "@fluent/dom": "^0.10.0",
    "@types/chrome": "^0.0.304",
    "@types/hoist-non-react-statics": "^3.3.6",
    "@types/html-webpack-plugin": "^3.2.9",
    "@types/jest": "^29.5.14",
    "@types/js-md5": "^0.7.2",
    "@types/lodash": "^4.17.15",
    "@types/mini-css-extract-plugin": "^2.5.1",
    "@types/node": "^22.13.4",
    "@types/pdfjs-dist": "^2.10.377",
    "@types/react": "^19.0.8",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.0.3",
    "@types/webpack": "^5.28.5",
    "auto-bind": "^5.0.1",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "flag-icons": "^7.3.2",
    "flex.box": "^3.4.4",
    "hoist-non-react-statics": "^3.3.2",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-md5": "^0.8.3",
    "lodash": "^4.17.21",
    "marked": "^15.0.7",
    "mellowtel": "^1.5.4",
    "mini-css-extract-plugin": "^2.9.2",
    "mobx": "^6.13.6",
    "mobx-observable-history": "^2.0.3",
    "mobx-react": "^9.2.0",
    "openai": "^4.85.1",
    "pdf.js": "github:mozilla/pdf.js",
    "react": "^19.0.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.0.0",
    "react-select": "^5.10.0",
    "sass": "^1.85.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
