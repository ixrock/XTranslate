{
  "name": "xtranslate",
  "version": "5.0.0",
  "scripts": {
    "dev": "npm run webpack -- --env mode=development --watch",
    "build": "npm run clean && npm run webpack -- --env mode=production --progress && npm run pdfjs-build",
    "webpack": "node --import tsx node_modules/webpack-cli/bin/cli.js --config webpack.config.ts",
    "pdfjs-build": "cd node_modules/pdf.js && npm install && npx gulp generic && find ./build -name '*.map' -delete",
    "update-packages": "npx npm-check-updates -u",
    "clean": "rm -rf ./dist",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "engines": {
    "node": ">=24"
  },
  "keywords": [
    "chrome",
    "extension",
    "translate",
    "languages",
    "learning",
    "studying",
    "education",
    "productivity",
    "in-place-text-translator",
    "ai-text-translator",
    "ai-text-to-speech"
  ],
  "author": "ixrock",
  "repository": "https://github.com/ixrock/XTranslate.git",
  "license": "MIT",
  "dependencies": {
    "@mellowtel/module-meucci": "^1.0.0",
    "@types/chrome": "^0.1.4",
    "@types/html-webpack-plugin": "^3.2.9",
    "@types/jest": "^30.0.0",
    "@types/js-md5": "^0.8.0",
    "@types/lodash": "^4.17.20",
    "@types/mini-css-extract-plugin": "^2.5.1",
    "@types/node": "^24.3.0",
    "@types/pdfjs-dist": "^2.10.378",
    "@types/react": "^19.1.11",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.1.7",
    "@types/semver": "^7.7.0",
    "@types/webpack": "^5.28.5",
    "auto-bind": "^5.0.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "flag-icons": "^7.5.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^30.0.5",
    "js-md5": "^0.8.3",
    "lodash": "^4.17.21",
    "marked": "^16.2.0",
    "mellowtel": "^1.6.2",
    "mini-css-extract-plugin": "^2.9.4",
    "mobx": "^6.13.7",
    "mobx-observable-history": "^2.0.3",
    "mobx-react": "^9.2.0",
    "openai": "^5.15.0",
    "pdf.js": "github:mozilla/pdf.js",
    "react": "^19.1.1",
    "react-color": "^2.19.3",
    "react-dom": "^19.1.1",
    "react-select": "^5.10.2",
    "sass": "^1.90.0",
    "sass-loader": "^16.0.5",
    "semver": "^7.7.2",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
